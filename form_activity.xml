<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="KOD"
        android:id="@+id/textView_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView_id"
        android:layout_below="@+id/textView_id"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="Teacher"
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type"
        android:id="@+id/textView3"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editText_kod"
        android:layout_alignTop="@+id/textView_id"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editText_name"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editText_teacher"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editText_type"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        android:id="@+id/button_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:id="@+id/button_viewAll"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginEnd="18dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button_delete"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText_type"
        android:layout_marginEnd="18dp"/>



</RelativeLayout>